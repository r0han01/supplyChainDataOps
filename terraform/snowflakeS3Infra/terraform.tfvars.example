# =============================================================================
# Terraform Variables Configuration
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------

# AWS region where your S3 bucket is located
# Get value: aws configure get region
awsRegion = "us-east-1"

# Your AWS account ID (required for Phase 1)
# Get value: aws sts get-caller-identity --query Account --output text
yourAwsAccountId = "123456789012"

# S3 bucket name containing processed files
# Get value: aws s3 ls
s3BucketName = "your-bucket-name"

# S3 prefix path for processed files
# Get value: aws s3 ls s3://your-bucket-name/ --recursive
s3ProcessedPrefix = "processed/"

# -----------------------------------------------------------------------------
# Snowflake S3 Integration Configuration (Phase 2)
# -----------------------------------------------------------------------------
# Leave these empty for Phase 1, fill after creating storage integration:

# PHASE 1: Create role with your account ID
#   - Set yourAwsAccountId above
#   - Leave snowflakeIamUserArn and snowflakeExternalId empty
#   - Run: terraform apply

# PHASE 2: Update trust policy with Snowflake values
#   - Create storage integration in Snowflake using the role ARN from Phase 1
#   - Get values using: python3 extractSnowflakeAwsAccountId.py
#   - Fill snowflakeIamUserArn and snowflakeExternalId below
#   - Run: terraform apply again

# Snowflake IAM user ARN from storage integration (Phase 2 only)
# Leave empty for Phase 1, fill after creating storage integration
snowflakeIamUserArn = ""

# Snowflake external ID from storage integration (Phase 2 only)
# Leave empty for Phase 1, fill after creating storage integration
snowflakeExternalId = ""
